<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BroadcastActivity" >

    <TextView
        android:id="@+id/broadcast_countertxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/broadcast_startcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/broadcast_countertxt"
        android:layout_below="@+id/broadcast_countertxt"
        android:layout_marginTop="44dp"
        android:text="Start" />

    <Button
        android:id="@+id/broadcast_resumecounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/broadcast_startcounter"
        android:layout_alignBottom="@+id/broadcast_startcounter"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/broadcast_startcounter"
        android:text="Resume" />
    
    <Button
        android:id="@+id/broadcast_stopcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/broadcast_resumecounter"
        android:layout_alignBottom="@+id/broadcast_resumecounter"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/broadcast_resumecounter"
        android:text="Stop" />

</RelativeLayout>
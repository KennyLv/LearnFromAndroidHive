<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/nav_drawer_list_slector">
 
    <ImageView
        android:id="@+id/nav_drawer_list_icon"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/navigation_drawer_list_img_des"
        android:src="@drawable/ic_home"
        android:layout_centerVertical="true" />
 
    <TextView
        android:id="@+id/nav_drawer_list_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/nav_drawer_list_icon"
        android:minHeight="30dp"
        android:layout_centerVertical="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/list_item_title"
        android:gravity="center_vertical"
        android:paddingRight="40dp"
        android:textIsSelectable="false"/>
     
    <TextView 
        android:id="@+id/nav_drawer_list_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_drawer_list_counter_bg"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:textColor="@color/counter_text_color"
        android:textIsSelectable="false"/>
 
</RelativeLayout>